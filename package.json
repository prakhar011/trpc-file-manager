{
  "name": "server",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "esbuild src/app.ts --bundle --packages=external --platform=node --format=esm --outdir=dist --sourcemap",
    "lint": "eslint --ext \".js,.ts,.tsx\" --report-unused-disable-directives src",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && yarn prisma generate",
    "db:push": "npx prisma db push"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "morgan": "^1.10.0",
    "prisma": "^4.5.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "@trpc/server": "^10.0.0-proxy-beta.26",
    "@types/fs-extra": "^11.0.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^9.3.2",
    "jsonwebtoken": "^8.5.1",
    "redis": "^4.3.1",
    "trpc-playground": "^1.0.4",
    "zod": "^3.19.1"
  }
}
